<Window x:Class="SmartFridge.IngredientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingrediente Adăugate" Height="421" Width="500"
        Background="#2C2C2C" Foreground="White"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Border Background="#333" CornerRadius="10" Padding="20" Margin="10">
            <StackPanel>
                <TextBlock Text="Lista Ingrediente" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <ListBox x:Name="lstUserIngredients"
                         Background="#424242"
                         Foreground="White"
                         FontSize="14"
                         Height="250"
                         Padding="10"
                         BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                <Button Content="🆗 Închide" Click="CloseWindow_Click"
                        Background="#FF9800" Foreground="White"
                        FontSize="16" Padding="10"
                        Margin="0,15,0,0" Height="45"
                        BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
